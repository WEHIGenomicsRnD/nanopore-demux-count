params {
    outdir                  = "results"

    input                   = "$projectDir/test/AlasdairTest.fastq"

    fwd_primer              = "GCAAGTCTGGTGCCAGTGCG"

    rev_primer              = "GTTGTGACGTGCATGAATGG"
    
    mismatches              = 5

    barcode_length          = 13

    trim_log                = true
}

profiles {
    milton {
        conda.enabled = true
        cleanup = true
        process.cpus = 8
        process.memory = { 8.GB * task.attempt }
        process.time = '12h'
        process.errorStrategy = { 'retry' }
        process.maxRetries = 5
    }
    log {
        includeConfig 'logger.config'
    }
}